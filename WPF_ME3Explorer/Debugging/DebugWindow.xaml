<Window x:Class="WPF_ME3Explorer.Debugging.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ME3Explorer.Debugging"
        mc:Ignorable="d"
        Title="DebugWindow" Height="300" Width="579.406">
    <DockPanel>
        <Menu DockPanel.Dock="Top" MaxHeight="40">
            <MenuItem>
                <Button Content="Save Log"/>
            </MenuItem>
        </Menu>

        <RichTextBox x:Name="rtb" DockPanel.Dock="Bottom" Background="Black" Foreground="#FF29AA00"/>
    </DockPanel>
</Window>
